<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/User1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                >

                <Button
                    android:id="@+id/direction1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Get Direction"/>
                <Button
                    android:id="@+id/cond1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm Delivery"
                    android:layout_below="@+id/direction1"/>
                <TextView
                    android:id="@+id/haleem_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"

                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/gatholic"
                    android:text="Abdul"
                    android:textColor="@color/dark_black"
                    android:textSize="25sp" />

                <TextView

                    android:id="@+id/haleem_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/haleem_textView"
                    android:layout_alignParentRight="true"

                    android:fontFamily="@font/gatholic"
                    android:text="5km"
                    android:textColor="@color/red" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/User2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <Button
                    android:id="@+id/direction2"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Get Direction"/>
                <Button
                    android:id="@+id/cond2"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm Delivery"
                    android:layout_below="@+id/direction2"/>

                <TextView
                    android:id="@+id/biriyani_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/gatholic"
                    android:text="Santhosh"
                    android:textColor="@color/dark_black"
                    android:textSize="25sp" />

                <TextView

                    android:id="@+id/biriyani_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/biriyani_textView"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/gatholic"
                    android:text="3km"
                    android:textColor="@color/red" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/User3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <Button
                    android:id="@+id/direction3"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Get Direction"/>
                <Button
                    android:layout_width="160dp"
                    android:id="@+id/cond3"
                    android:layout_height="wrap_content"
                    android:text="Confirm Delivery"
                    android:layout_below="@+id/direction3"/>

                <TextView
                    android:id="@+id/fried_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/gatholic"
                    android:text="Taimur"
                    android:textColor="@color/dark_black"
                    android:textSize="25sp" />

                <TextView

                    android:id="@+id/fried_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fried_textView"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/gatholic"
                    android:text="8km"
                    android:textColor="@color/red" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>





    </GridLayout>

</RelativeLayout>