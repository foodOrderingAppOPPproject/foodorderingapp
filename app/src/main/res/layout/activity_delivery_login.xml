<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryLoginActivity"
    android:background="@drawable/cherryback">



    <EditText
        android:id="@+id/GetEmailt"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="255dp"
        android:layout_centerHorizontal="true"
        android:hint=" email "
        android:inputType="textEmailAddress"
        android:background="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/GetPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textColor="@color/dark_black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:hint="password"
        android:outlineProvider="bounds"
        android:elevation="20dp"
        android:background="@color/white"
        android:inputType="textPassword"
        android:textAlignment="center"

        />
    <EditText
        android:id="@+id/GetName2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="@color/white"
        android:hint="name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/GetNumber2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@color/white"
        android:hint="Mobile Number"
        android:textAlignment="center"
        android:textStyle="bold"
        android:inputType="phone"/>





    <TextView
        android:id="@+id/tvDeliveryToLogin"
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="640dp"
        android:background="#D3D3D3"
        android:textColor="@color/dark_black"
        android:text="already registered? sign in here."
        />

    <Button
        android:id="@+id/DeliverySignUpButton"
        android:layout_height="50dp"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:background="@color/red"
        android:layout_marginTop="580dp"
        android:textStyle="bold"
        android:textColor="@color/dark_black"


        android:text="Create Account"
        />


</RelativeLayout>